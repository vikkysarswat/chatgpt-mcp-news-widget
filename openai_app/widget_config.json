{
  "widgets": [
    {
      "type": "news_card",
      "name": "News Article Card",
      "description": "Display a single news article with image, title, description, and metadata",
      "schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Article title"
          },
          "description": {
            "type": "string",
            "description": "Article description or excerpt"
          },
          "image_url": {
            "type": "string",
            "format": "uri",
            "description": "URL to article image"
          },
          "author": {
            "type": "string",
            "description": "Article author"
          },
          "source": {
            "type": "string",
            "description": "News source"
          },
          "published_at": {
            "type": "string",
            "format": "date-time",
            "description": "Publication date and time"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Link to full article"
          },
          "category": {
            "type": "string",
            "description": "Article category"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Article tags"
          }
        },
        "required": ["title", "url"]
      },
      "template": {
        "layout": "card",
        "style": {
          "border": "1px solid #e0e0e0",
          "borderRadius": "8px",
          "padding": "16px",
          "marginBottom": "16px"
        },
        "elements": [
          {
            "type": "image",
            "src": "{{image_url}}",
            "alt": "{{title}}",
            "style": {
              "width": "100%",
              "height": "200px",
              "objectFit": "cover",
              "borderRadius": "4px"
            }
          },
          {
            "type": "text",
            "content": "{{title}}",
            "style": {
              "fontSize": "20px",
              "fontWeight": "bold",
              "marginTop": "12px"
            }
          },
          {
            "type": "text",
            "content": "{{description}}",
            "style": {
              "fontSize": "14px",
              "color": "#666",
              "marginTop": "8px"
            }
          },
          {
            "type": "metadata",
            "items": [
              {
                "icon": "user",
                "text": "{{author}}"
              },
              {
                "icon": "newspaper",
                "text": "{{source}}"
              },
              {
                "icon": "calendar",
                "text": "{{published_at}}"
              }
            ],
            "style": {
              "display": "flex",
              "gap": "12px",
              "marginTop": "12px",
              "fontSize": "12px",
              "color": "#888"
            }
          },
          {
            "type": "tags",
            "values": "{{tags}}",
            "style": {
              "display": "flex",
              "gap": "8px",
              "marginTop": "12px",
              "flexWrap": "wrap"
            },
            "tagStyle": {
              "backgroundColor": "#f0f0f0",
              "padding": "4px 8px",
              "borderRadius": "4px",
              "fontSize": "12px"
            }
          },
          {
            "type": "button",
            "text": "Read Full Article",
            "href": "{{url}}",
            "style": {
              "marginTop": "16px",
              "padding": "8px 16px",
              "backgroundColor": "#0066cc",
              "color": "white",
              "border": "none",
              "borderRadius": "4px",
              "cursor": "pointer"
            }
          }
        ]
      }
    },
    {
      "type": "news_list",
      "name": "News List",
      "description": "Display multiple news articles in a vertical list",
      "schema": {
        "type": "object",
        "properties": {
          "articles": {
            "type": "array",
            "items": {
              "$ref": "#/widgets/news_card/schema"
            }
          }
        }
      }
    },
    {
      "type": "news_grid",
      "name": "News Grid",
      "description": "Display news articles in a responsive grid layout",
      "schema": {
        "type": "object",
        "properties": {
          "articles": {
            "type": "array",
            "items": {
              "$ref": "#/widgets/news_card/schema"
            }
          },
          "columns": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "default": 3,
            "description": "Number of columns in the grid"
          }
        }
      }
    }
  ]
}